<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".user.ViewBalance">
    <ImageView
        android:id="@+id/student_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/balance"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Account Information inside a Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:radius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Account Number Section -->
            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#5E35B1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_account_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#303F9F"
            android:layout_marginTop="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D1C4E9"
                android:layout_marginVertical="16dp" />

            <!-- Balance Section -->
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#5E35B1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#303F9F"
            android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:paddingHorizontal="32dp"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/back_icon"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:background="@drawable/button_roundedd" />
</LinearLayout>
