<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.SuccessActivity">

    <ImageView
        android:id="@+id/img_success_icon"
        android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/payment_success"
    android:contentDescription="Success Icon"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="80dp"
    app:tint="#4CAF50" />

    <!-- Confirmation Message (Moved down slightly) -->
    <TextView
        android:id="@+id/tv_confirmation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/img_success_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <TextView
        android:id="@+id/txt_beneficiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid to: "
        android:textSize="18sp"
        android:textColor="#212121"
        app:layout_constraintTop_toBottomOf="@id/tv_confirmation_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

    <!-- Payment Amount (Moved down slightly) -->
    <TextView
        android:id="@+id/txt_payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: R"
        android:textSize="18sp"
        android:textColor="#212121"
        app:layout_constraintTop_toBottomOf="@id/txt_beneficiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Transaction Reference (Moved down slightly) -->
    <TextView
        android:id="@+id/txt_reference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reference: "
        android:textSize="16sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/txt_payment_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Transaction Date and Time (Moved down slightly) -->
    <TextView
        android:id="@+id/txt_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="16sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/txt_reference"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Return Home Button (Remains the same) -->
    <Button
        android:id="@+id/btn_return_homee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Return Home"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A9F4"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/txt_date_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
