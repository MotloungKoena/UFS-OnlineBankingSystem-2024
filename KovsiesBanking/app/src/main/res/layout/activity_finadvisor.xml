<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Consultants">

    <!-- AppBar with toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/advisor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Fin. Advisor Dashboard"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"
        tools:ignore="MissingConstraints" />

    <!-- Scrollable content layout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/advisor_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image section -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/advisor" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Hello Advisor"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Button 1 -->
            <Button
                android:id="@+id/btnViewAllClients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"
                android:text="View All Clients"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="12dp"/>

            <!-- Button 2 -->
            <!--<Button
                android:id="@+id/btnAdvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorAccent"
                android:textColor="@android:color/white"
                android:text="Give Advice to Client"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="12dp"/>-->
            <Button
                android:id="@+id/btnAdvisorPersonalDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorAccent"
                android:textColor="@android:color/white"
                android:text="Advisor Personal Details"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
