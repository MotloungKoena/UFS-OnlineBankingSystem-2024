<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserTransactions">

    <!-- Title TextView for Previous Transactions -->
    <TextView
        android:id="@+id/textViewViewUsers1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Previous Transactions"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ImageView for Logo -->
    <ImageView
        android:id="@+id/student_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ufs_logo_"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewViewUsers1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ListView for Previous Transactions -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/student_image"
        app:layout_constraintBottom_toTopOf="@id/btnNotifGoBack2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btnNotifGoBack2"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Go Back"
        app:layout_constraintTop_toBottomOf="@id/listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
