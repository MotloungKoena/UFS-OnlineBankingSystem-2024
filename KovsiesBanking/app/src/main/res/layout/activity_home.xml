                            android:src="@mipmap/cashsend"
                            android:contentDescription="Send Cash Icon"/>

                        <TextView
                            android:id="@+id/textViewCashSend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send Cash"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/bankcard"
                            android:contentDescription="View Cards Icon"/>

                        <TextView
                            android:id="@+id/textViewViewCards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Cards"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
