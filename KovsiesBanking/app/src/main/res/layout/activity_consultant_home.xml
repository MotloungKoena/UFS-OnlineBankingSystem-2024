<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Toolbar with elevation -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/consultant_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Consultant Dashboard"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"/>

    <!-- Scrollable content for responsiveness -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Consultant Picture -->
            <ImageView
                android:id="@+id/consultant_profile_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/consultant"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Consultant Profile Picture"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/consultant_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Consultant"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- CardView for View All Users -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/view_all_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All Users"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for Managing User Accounts -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/manage_user_accounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage User Accounts"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for Changing User Passwords -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/change_user_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change User Password"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for Adding a New User -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/add_new_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add New User"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
